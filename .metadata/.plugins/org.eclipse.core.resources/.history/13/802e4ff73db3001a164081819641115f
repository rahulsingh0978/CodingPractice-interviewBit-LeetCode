package interview;

public class ComplexNumMul {
	class Complex{
        int r;
        int i;
        Complex(int r,int i){
        	this.r=r;
        	this.i=i;
        }
    }
	// "1+-1i", "1+-1i"  (a+b)(c+d) = ac+ad+bc+bd;
    public String complexNumberMultiply(String a, String b) {
    	String[] val1 = a.split("\\+");
    	String[] val2 = b.split("\\+");
    	int r1 = Integer.parseInt(val1[0]);
    	int r2= Integer.parseInt(val2[0]);
    	int i1 = Integer.parseInt(val1[1].substring(0,val1[1].length()-1));
    	int i2 = Integer.parseInt(val2[1].substring(0,val2[1].length()-1)) ;
    	int ac = r1*r2;
    	int bd = -1 * i1*i2; 
    	int real = ac+bd;
    	int ad = r1*Integer.parseInt(val2[1].substring(0,val2[1].length()-1));
    	int bc = r2 * Integer.parseInt(val1[1].substring(0,val1[1].length()-1));
    	int complex = ad+bc;
    	return real+"+"+complex+"i";
    }
    public static void main(String[] args) {
    	ComplexNumMul obj = new ComplexNumMul();
    	
    	System.out.println(obj.complexNumberMultiply("1+-1i", "0+0i"));
		String i="-1";
		System.out.println(Integer.parseInt(i));
	}
}
