package interview;

public class FIndIfPalindromeAfterEdit {
	public boolean isPalindrome(String s, int low, int high) {
		while (low < high) {
			if (s.charAt(low) != s.charAt(high)) {
				return false;
			}
			low++;
			high--;
		}
		return true;
	}

	public int ifPossibleWithEdit(String s) {
		int l = 0;
		int h = s.length() - 1;
		while (l < h) {
			if (s.charAt(l) == s.charAt(h)) {
				l++;
				h--;
			} else {

				if (isPalindrome(s, l + 1, h)) {
					return l;
				}
				if (isPalindrome(s, l, h - 1)) {
					return h;
				}
				return -1;
			}
		}

		return -2;
	}

	public static void main(String[] args) {
		FIndIfPalindromeAfterEdit obj = new FIndIfPalindromeAfterEdit();
		String s = "bacsdssdab";
		System.out.println(obj.ifPossibleWithEdit(s));
	}
}
