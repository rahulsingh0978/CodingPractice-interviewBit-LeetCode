package interview;

public class FIndIfPalindromeAfterEdit {
	public boolean isPalindrome(String s, int low, int high) {
		while (low < high) {
			if (s.charAt(low) != s.charAt(high)) {
				return false;
			}
			low++;
			high--;
		}
		return true;
	}
	public boolean ifPossibleWithEdit(String s) {
		int l = 0;
		int h = s.length() - 1;
		while (l < h) {
			if(s.charAt(l)==s.charAt(l)) {
				l++;
				h--;
			}else {
				return isPalindrome(s,l+1,h-1);	
			}
		}
		return true;
	}
	public static void main(String[] args) {
		FIndIfPalindromeAfterEdit obj = new FIndIfPalindromeAfterEdit();
		String s = "abbacdabba";
		System.out.println(obj.ifPossibleWithEdit(s));
	}
}
