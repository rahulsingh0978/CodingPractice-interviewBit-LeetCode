package leetcode;

public class sqrtFloor {
	public int sqrt(int A) {
	       if(A<=1){ // A <= 1
	           return A;
	       }if( A==2 ||A==3){
	           return 1;
	       }
	       
	       int val =  helper(1,A);
	       while(A/val >=val){
	          
	             val =   helper(1,val);
	           
	       }
	        return val;
	    }
	    
	    public int helper(int l, int h){
	        if(l<h){
	            int mid = l +h-l/2;
	            return (mid);
	        }
	        return l;
	    }
	    public static void main(String[] args) {
	    	sqrtFloor obj = new sqrtFloor();
	    	System.out.println(obj.sqrt(11));
		}
}
